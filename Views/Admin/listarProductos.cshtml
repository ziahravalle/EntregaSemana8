@model IEnumerable<EntregaSemana8.Models.TbProducto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
<body>
    <h1>LISTADO DE PRODUCTOS REGISTRADOS</h1>
    <h2>
        Buscar<input class="form-control" id="myInput" type="text" placeholder="Search..." />
    </h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <td scope="col">Id</td>
                <td scope="col">Descripcion</td>
                <td scope="col">Precio</td>
                <td scope="col">Stock actual</td>
                <td scope="col">Stock minimo</td>
                <td scope="col">Categoria</td>
                <td scope="col">Editar</td>
                <td scope="col">Eliminar</td>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdPro</td>
                    <td>@item.DesPro</td>
                    <td>@item.PrePro</td>
                    <td>@item.StkAct</td>
                    <td>@item.StkMin</td>
                    <td>@item.CatePro</td>
                    <td><a asp-action="Edit" asp-route-id="@item.IdPro">Editar</a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.IdPro">Eliminar</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>