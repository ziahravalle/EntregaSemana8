<!DOCTYPE html>
<html Lang="en">
<head>
    <meta charset="UFT-8">
    <title>Crear Contraseña</title>
    <link rel="stylesheet" type="text/css" href="~/css/validar.css">

</head>
<body>
    <div class="box">
        <span class="border"></span>
        <form id="loginForm">
            <!----------------------------------SIGN IN------------------------------------------->
            <h2>Crear Contraseña</h2>
            <div class="inputBox">
                <input type="text" required="required">
                <span>>Crear Contraseña<</span>
                <i></i>
            </div>
            <!------------------------------BOTON ENTRAR------------------------------------------->
            <input type="submit" style="--clr:#fbff00" value="Entrar" href="/Usuario/Index">




        </form>
    </div>
</body>

</html>

<script>

    // Obtén el formulario por su id
    const loginForm = document.getElementById('loginForm');

    // Agrega un evento para escuchar el envío del formulario
    loginForm.addEventListener('submit', function (e) {
        // Evita el envío del formulario predeterminado
        e.preventDefault();

        // Redirige a la página de producto/index
        window.location.href = '/producto/index';
    });
</script>
